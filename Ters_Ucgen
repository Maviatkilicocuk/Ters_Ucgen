package Giris;
import java.util.Scanner;
public class Ters_Ucgen {
    public static void main(String[] args) {

        int x,y;

        Scanner input = new Scanner(System.in);

        System.out.print("Lütfen kaç basamaklı ters üçgen istiyorsanız sayısal olarak giriniz : ");
        x = input.nextInt();

        do {
            for (y=0;y<=x-1;y++){
                System.out.print("*");
            }
            System.out.println("" +x);
            x-=1;
        }while(x!=0);



    }
}
